{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./",
    "outDir": "../dist/public",
    "module": "commonjs",
    "paths": {
      "@src": [
        "./src"
      ]
    },
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react"
  },
  "include": [
    "./**/*.tsx",
    "./**.ts",
    "vendors.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/FUTURE_*",
    "**/DEPRECATED_*"
  ]
}